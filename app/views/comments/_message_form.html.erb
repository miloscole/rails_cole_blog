<% parent_comment ||= nil %>
<%= form_with(model: [ article, Comment.new ]) do |form| %>
  <%= form.hidden_field :parent_id, value: parent_comment.id  if parent_comment %>
  <fieldset role="group">
    <%= form.text_area :message, placeholder: "What are you thoughts on this?", size: "1x1"%>
    <%= form.submit "Send" %>
  </fieldset>
<% end %>