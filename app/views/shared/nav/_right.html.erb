<ul id="nav-right">
  <label for="sidebar-active" class="close-btn"></label>
  <strong>
    <li>
      <%= link_to "Articles", articles_path %>
    </li>
    <li>
      <%= link_to "Bloggers", users_path %>
    </li>
  </strong>
  <li class="dropdown-top-margin">
    <details class="dropdown">
      <summary role="button" class="outline">
        <strong>Categories</strong>
      </summary>
      <ul>
        <li><%= link_to "All articles", "#" %></li>
        <hr>
        <li>Placeholder</li>
        <li>Placeholder</li>
      </ul>
    </details>
  </li>
  <li class="dropdown-top-margin">
    <details class="dropdown">
      <summary role="button" class="outline">
        <strong>Actions</strong>
      </summary>
      <ul>
        <li><%= link_to "Add new article", new_article_path %></li>
        <li><%= link_to "Add new category", "#" %></li>
      </ul>
    </details>
  </li>
