<%= render 'shared/errors', obj: user %>
<%= form_for user do |f| %>
  <div><%= f.label :username %></div>
  <div><%= f.text_field :username, required: true, placeholder: true %></div>
  <div><%= f.label :email %></div>
  <div><%= f.email_field :email, required: true, placeholder: true %></div>
  <div><%= f.label :password%></div>
  <div><%= f.password_field :password, placeholder: true, autocomplete: "new-password" %></div>
  <br>
  <%= f.submit submit_text ||= 'Signup' %>
<% end %>
